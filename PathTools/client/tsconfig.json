{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "src",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*/*.ts",
        "src/**/*.tsx"
    ]
}